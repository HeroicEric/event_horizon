!!! html
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= content_for?(:title) ? yield(:title) : "Event Horizon"

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags

  %body
    %nav.top-bar(data-topbar)
      %ul.title-area
        %li.name
          %h1= link_to "Event Horizon", root_path

      %section.top-bar-section
        %ul.right
          - if user_signed_in?
            %li
              %a= "Signed in as #{current_user.username}"
            %li= link_to "Sign Out", session_path, method: :delete
          - else
            %li= link_to "Sign In With GitHub", new_session_path

        %ul.left
          %li= link_to "Assignments", assignments_path
          - if user_signed_in?
            %li= link_to "Courses", courses_path
          %li.has-form
            .row.collapse
              = form_tag assignments_path, method: :get do
                .large-8.small-9.columns
                  = text_field_tag :query, params[:query]
                .large-4.small-3.columns
                  = submit_tag "Search", class: "alert button expand"


    - if flash.any?
      #notifications.row
        - flash.each do |type, message|
          .alert-box(class=type data-alert)
            = message
            %a.close(href="#") &times;

    #content.row
      = yield

    = javascript_include_tag "application"
