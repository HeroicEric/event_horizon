!!! html
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %title= content_for?(:title) ? yield(:title) : "Event Horizon"

    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags

  %body
    %nav.top-bar(data-topbar)
      %ul.title-area
        %li.name
          %h1= link_to "Event Horizon", root_path

      %section.top-bar-section
        %ul.right
          - if user_signed_in?
            %li= "Signed in as #{current_user.username}"
            %li= link_to "Sign Out", session_path, method: :delete
          - else
            %li= link_to "Sign In With GitHub", new_session_path

        %ul.left
          %li= link_to "Assignments", assignments_path

    #content.row
      - if flash.any?
        #notifications
          - flash.each do |type, message|
            .notification(type=type)= message

      = yield

    = javascript_include_tag "application"
